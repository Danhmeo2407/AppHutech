<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.hutech.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_new"
        android:name="com.example.hutech.ui.news.NewFragment"
        android:label="News"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_qrcode"
        android:name="com.example.hutech.ui.qrcode.QrcodeFragment"
        android:label="QrCode"
        tools:layout="@layout/fragment_qrcode" />

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.example.hutech.ui.list.ListFragment"
        android:label="List"
        tools:layout="@layout/fragment_list" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.hutech.ui.account.AccountFragment"
        android:label="Account"
        tools:layout="@layout/fragment_account" />

</navigation>